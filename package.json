{
  "name": "newdev_api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && mkdir build && babel ./ --ignore 'node_modules,build,.github,.nyc_output' -s -d build",
    "start": "npm run build && node ./build/server.js",
    "dev": "babel-watch server.js",
    "test": "NODE_ENV=test nyc mocha src/* --recursive --require babel-register --exit",
    "clean": "rm -rf build",
    "db:migrate": "sequelize db:migrate",
    "db:undo:migrate": "sequelize db:migrate:undo:all",
    "db:roll:migrate": "npm run db:undo:migrate && npm run db:migrate && npm run db:seed",
    "db:seed": "node_modules/.bin/sequelize db:seed:all $* --seeders-path src/database/seeders/",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newdevtech/newdev_api.git"
  },
  "author": "NewDevTech",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/newdevtech/newdev_api/issues"
  },
  "homepage": "https://github.com/newdevtech/newdev_api#readme",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^2.0.8",
    "bcrypt": "^5.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "consola": "^2.7.1",
    "cors": "^2.8.4",
    "date-fns": "^1.30.1",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "husky": "^2.3.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.0",
    "nodemailer": "^6.2.1",
    "nodemailer-stub-transport": "^1.1.0",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.7.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.8.7",
    "sequelize-cli": "^5.4.0",
    "shortid": "^2.2.14",
    "sinon": "^7.3.2",
    "swagger-ui-express": "^4.0.5",
    "validator": "^10.10.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.1.0",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "nyc": {
    "exclude": [
      "src/database/"
    ]
  }
}
